<div class="classic_form">
<%= form_for(@classic) do |f| %>
    <%= hidden_field_tag "classic[user_id]", current_user.id%>
    <%= f.label :author %> <br>
    <%= @classic.author_name if @classic.author_name%>
    <%= author_id_field(@classic) %><br>
    <h3 class="subtitle">Or Add a New Author:</h3>
   <%= f.fields_for :author, @classic.build_author do |author_field| %>
        <%= author_field.hidden_field :user_id, value: current_user.id%>
       <%= author_field.label :name %>
       <%= author_field.text_field :name %><br>
       <%= author_field.label :biography %>
       <%= author_field.text_field :biography %><br>
       <%= author_field.label :birth %>
       <%= author_field.number_field :birth %><br>
       <%= author_field.label :death %>
       <%= author_field.number_field :death %><br>
   <% end %><br>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :release_date %><br>
    <%= f.number_field :release_date%><br>
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %><br><br>
    <%= f.label :content %><br>
    <%= f.text_area :content%><br>
<%= f.submit "Submit Text" %>
<% end %>
</div>