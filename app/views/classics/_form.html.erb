<%= form_for(@classic) do |f| %>
<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, Author.order(:name), :id,:name, include_blank: true %><br><br>
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %><br><br>
    <%= f.label :content %><br>
    <%= f.text_area :content%>
</div>
<%= f.submit "Translate Text" %>
<% end %>