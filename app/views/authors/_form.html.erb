<%= form_for(@author) do |f| %>
<div class="field">
    <%= hidden_field_tag "author[user_id]", current_user.id%>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :biography %><br>
    <%= f.text_area :biography %><br>
    <%= f.label :birth %><br>
    <%= f.number_field :birth %><br>
    <%= f.label :death %><br>
    <%= f.number_field :death%><br>
</div>
<%= f.submit "Submit Author Information" %>
<% end %>