<%= form_for(@author) do |f| %>
<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :biography %><br>
    <%= f.text_area :biography %>
    <%= f.label :birth %><br>
    <%= f.date_field :birth %><br>
    <%= f.label :death %><br>
    <%= f.date_field :death%><br>
</div>
<%= f.submit "Submit Author Information" %>
<% end %>